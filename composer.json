{
    "name": "eventim/php-test",
    "description": "Eventim test for Senior PHP developer",
    "type": "project",
    "require": {
        "php": "^8.2",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.13",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "lint": "phpcs --standard=PSR2 src",
        "lint:fix": "phpcbf --standard=PSR2 src",
        "test": "phpunit tests/"
    }
}
